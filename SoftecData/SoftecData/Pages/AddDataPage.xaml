<Page x:Class="SoftecData.Pages.AddDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoftecData.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddDataPage">

    <StackPanel>
        <Label Content="Add a new data item" Margin="0,0,0,30" />

        <Label Content="Key" />
        <TextBox Margin="10,20,10,0" MinHeight="20" />

        <Label Content="Value" />
        <TextBox Margin="10,20,10,0" MinHeight="20" />
        <Button x:Name="addNewItemBtn" Margin="0,40,0,0" MinHeight="30" Content="Add" Click="addNewItemBtn_Click" />
    </StackPanel>
</Page>
