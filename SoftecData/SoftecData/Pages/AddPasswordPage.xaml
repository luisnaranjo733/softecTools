<Page x:Class="SoftecData.Pages.AddPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoftecData.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="300"
      Title="AddPasswordPage" Loaded="PageLoaded">

    <StackPanel>

        <Label Content="Account password:" FontSize="20" FontWeight="Bold"></Label>
        <TextBox x:Name="passwordTextbox" TabIndex="0" FontSize="20"></TextBox>

        <Label Content="Initials:" FontSize="20" FontWeight="Bold"></Label>
        <TextBox x:Name="initialsTextbox" TabIndex="1" FontSize="20"></TextBox>

        <Button IsDefault="True" x:Name="doneButton" Click="doneButton_Click" MinHeight="50" MinWidth="150" Content="Save" Margin="0,50,0,0" FontSize="24" ></Button>

    </StackPanel>
</Page>
