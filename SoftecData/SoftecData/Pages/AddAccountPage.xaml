<Page x:Class="SoftecData.Pages.AddAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoftecData.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddAccountPage" Loaded="PageLoaded">

    <StackPanel>

        <Label Content="Account username:"></Label>
        <TextBox x:Name="usernameTextbox"></TextBox>

        <CheckBox x:Name="showPasswordCheckbox" IsChecked="False" Checked="showPasswordCheckbox_Checked">Show password</CheckBox>
        
        <Button IsDefault="True" x:Name="doneButton" Click="doneButton_Click" MinHeight="50" MinWidth="150" Content="Save" Margin="0,50,0,0" ></Button>
        
    </StackPanel>
</Page>
