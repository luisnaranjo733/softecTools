<Page x:Class="SoftecData.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoftecData.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <StackPanel>
        <Label Content="Softec Dashboard" Margin="0,0,0,30" />

        <Label Content="Enter password" />
        <PasswordBox Name="passwordBox"></PasswordBox>
        <!--<TextBox x:Name="keyBox" Margin="10,20,10,0" MinHeight="20" />-->

        <Button x:Name="loginBtn" Margin="0,40,0,0" MinHeight="30" Content="Log in" Click="loginBtn_Click" />
    </StackPanel>
</Page>
