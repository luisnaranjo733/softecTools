<Window x:Class="SoftecData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftecData"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="700">
    <StackPanel>
        <Label x:Name="Header" Content="Softec Data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="500"/>

        <ListView Margin="10" Name="lvUsers">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Key" Width="100" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Value" Width="200" DisplayMemberBinding="{Binding Age}" />
                    <GridViewColumn Header="Protected?" Width="100" DisplayMemberBinding="{Binding Mail}" />
                </GridView>
            </ListView.View>
        </ListView>
        
        <Button x:Name="fetchProtectedData" Content="Fetch potected data" Click="fetchProtectedData_Click" />
        
    </StackPanel>
</Window>
